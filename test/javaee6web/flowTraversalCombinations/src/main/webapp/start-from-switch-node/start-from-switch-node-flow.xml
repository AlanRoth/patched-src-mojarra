<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
  
  <flow-definition id="start-from-switch-node">
    <start-node>SourcePage</start-node>
    
    <view id="SourcePage">
        <vdl-document>/start-from-switch-node/SourceView.xhtml</vdl-document>
    </view>
    
    <switch id="InitialSwitchNode">
      <case>
        <if>#{switchNaviToOthersBean.toMethodCall}</if>
        <from-outcome>MethodCallNodeToBeCalled</from-outcome>
      </case>
      <case>
        <if>#{switchNaviToOthersBean.toView}</if>
        <from-outcome>ViewNodeToBeCalled</from-outcome>
      </case>      
      <case>
        <if>#{switchNaviToOthersBean.toSwitch}</if>
        <from-outcome>SwitchNodeToBeCalled</from-outcome>
      </case>
      <case>
        <if>#{switchNaviToOthersBean.toReturn}</if>
        <from-outcome>ReturnNodeToBeCalled</from-outcome>
      </case>
       <case>
        <if>#{switchNaviToOthersBean.toFlowCall}</if>
        <from-outcome>FlowCallNodeToBeCalled</from-outcome>
      </case>
      <default-outcome>PageShouldNotBe</default-outcome>
    </switch>
    
    <method-call id="MethodCallNodeToBeCalled" >
      <method>#{switchNaviToOthersBean.toLastPage()}</method>
      <default-outcome>delay_event</default-outcome>
    </method-call>
    
    <view id="ViewNodeToBeCalled">
        <vdl-document>/start-from-switch-node/DestinationView.xhtml</vdl-document>
    </view>
    
    <switch id="SwitchNodeToBeCalled">
      <case>
        <if>#{switchNaviToOthersBean.case1}</if>
        <from-outcome>DestinationView</from-outcome>
      </case>
      <case>
        <if>#{switchNaviToOthersBean.case2}</if>
        <from-outcome>PageShouldNotBe</from-outcome>
      </case>
      <default-outcome>PageShouldNotBe</default-outcome>
    </switch>
        
    <flow-return id="ReturnNodeToBeCalled">
        <from-outcome>/return1</from-outcome>
    </flow-return>

    <flow-call id="FlowCallNodeToBeCalled">
        <flow-reference>
            <flow-id>target-flow</flow-id>
        </flow-reference>
    </flow-call>
  </flow-definition>  
  
</faces-config>
