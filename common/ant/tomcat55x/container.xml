<project name="Tomcat 5.5.x Container" basedir=".">

    <taskdef name="deploy" classname="org.apache.catalina.ant.DeployTask">
        <classpath>
            <pathelement
                  location="${container.home}/server/lib/catalina-ant.jar"/>
        </classpath>
    </taskdef>
    <taskdef name="undeploy" classname="org.apache.catalina.ant.UndeployTask">
        <classpath>
            <pathelement
                  location="${container.home}/server/lib/catalina-ant.jar"/>
        </classpath>
    </taskdef>


   <property name="servlet-api.jar" value="servlet-api.jar" />
   <property name="jsp-api.jar" value="jsp-api.jar" />
   <property name="commons-beanutils.jar" value="commons-beanutils.jar" />
   <property name="commons-digester.jar" value="commons-digester.jar" />
   <property name="commons-logging.jar" value="commons-logging.jar" />
   <property name="jstl.jar" value="jstl.jar" />
    
    <path id="compile.classpath">
        <pathelement location="${container.home}/common/lib/${servlet-api.jar}"/>
        <pathelement location="${container.home}/common/lib/${jsp-api.jar}"/>
        <pathelement location="${commons.beanutils.home}/${commons-beanutils.jar}"/>
        <pathelement location="${commons.digester.home}/${commons-digester.jar}"/>
        <pathelement location="${commons.logging.home}/${commons-logging.jar}"/>
        <pathelement location="${jstl.home}/lib/${jstl.jar}"/>
    </path>

    <!-- JARs that may be packaged in WEB-INF/lib
  in order for the implementation to run 
  properly if they aren't availabe in the
  container's classloader.  
   
  This is a comma separated list of fully
  qualified JARs -->
    <property name="webapp.jars" value="${commons.beanutils.home}/commons-beanutils.jar,
                                        ${commons.digester.home}/commons-digester.jar,
                                        ${commons.logging.home}/commons-logging.jar,
                                        ${jstl.home}/lib/jstl.jar,
                                        ${jstl.home}/lib/standard.jar"/>
    
    <!-- Required Targets -->
    
    <macrodef name="deploy.artifact">
        <attribute name="artifact"
                   description="The WAR to deploy"/>
        <attribute name="appName"
                   description="The name of the application"/>
        <sequential>
            <echo>
=============== Tomcat 5.5.x - Deploying @{appName} ===============
                
            </echo>
            <deploy url="${tomcat.manager.url}"
                    username="${tomcat.manager.user}"
                    password="${tomcat.manager.password}"
                    path="/@{appName}"
                    war="@{artifact}"
                    failonerror="false"/>
        </sequential>
    </macrodef>

    <macrodef name="undeploy.artifact">
        <attribute name="artifact"
                   description="The WAR to deploy"/>
        <attribute name="appName"
                   description="The name of the application"/>
        <sequential>
            <echo>
=============== Tomcat 5.5.x - Undeploying @{appName} ===============
                
            </echo>
            <undeploy url="${tomcat.manager.url}"
                      username="${tomcat.manager.user}"
                      password="${tomcat.manager.password}"
                      path="/@{appName}"                    
                      failonerror="false"/>
        </sequential>
    </macrodef>
    
    <target name="config.container"
            description="Perform any container specific configuration necessary for the unit tests to run">                
        <replace
              file="${container.home}/conf/tomcat-users.xml"
              token="user username=&quot;tomcat&quot; password=&quot;tomcat&quot; roles=&quot;tomcat&quot;"
              value="user username=&quot;tomcat&quot; password=&quot;tomcat&quot; roles=&quot;tomcat,manager,admin&quot;"/>
    </target>

    <!-- Require target to display information about the build environment -->
    <target name="props">
        <echo message="PENDING - Please add a message"/>            
    </target>
    
    <target name="update.impl.manifest">
        <echo message="PENDING = Please implement"/>
    </target>

    <target name="container.deploy"
            description="Deploy the JSF Implementation artifacts to the target container.">
        <delete>
            <fileset dir="${container.home}/common/lib" includes="jsf-*.jar"/>
        </delete>
        <copy todir="${container.home}/common/lib"
              file="${jsf-api.jar}"/>
        <copy todir="${container.home}/common/lib"
              file="${jsf-impl.jar}"/>
    </target>
    
    <macrodef name="container.start"
            description="Start the Tomcat container">
        <sequential>
            <start.tomcat/>
        </sequential>
    </macrodef>
    
    <macrodef name="container.stop"
            description="Stop the Tomcat container">
        <sequential>
            <stop.tomcat/>
        </sequential>
    </macrodef>
    
    <!-- 'PRIVATE' targets -->
    <macrodef name="start.tomcat">
        <sequential>
            <echo>
                
"------------ Starting ${container.name} ------------"
                
            </echo>
            <if>
                <os family="unix"/>
                <then>
                    <exec executable="${container.home}/bin/startup.sh" failonerror="true"/>
                    <waitfor>
                        <http url="http://${container.host}:${container.port}"/>
                    </waitfor>
                </then>
                <else>
                    <echo message="${container.home}/bin/startup.bat" />
                    <exec executable="${container.home}/bin/startup.bat" spawn="false"/>
                    <sleep seconds="15"/>
                </else>
            </if>
        </sequential>
    </macrodef>

    <macrodef name="stop.tomcat">
        <sequential>
            <echo>
                
"------------ Stopping ${container.name} ------------"
                
            </echo>
            <if>
                <os family="unix"/>
                <then>
                    <exec executable="${container.home}/bin/shutdown.sh" />
                </then>
                <else>
                    <echo message="${container.home}/bin/shutdown.bat" />
                    <exec executable="${container.home}/bin/shutdown.bat" spawn="false" />
                </else>
            </if>

            <sleep seconds="15"/>
        </sequential>
    </macrodef>
</project>
